<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/id_layout_swipe_refresh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/id_viewpager_adv"
            android:layout_width="fill_parent"
            android:layout_height="160dp"/>

        <LinearLayout
            android:id="@+id/viewGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-25px"
            android:gravity="center_horizontal"
            android:orientation="horizontal"/>

        <!-- 衣服，裤子，查看3个按钮的父布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingBottom="5dp"
            android:paddingTop="30dp">

            <!-- 衣服，裤子2个按钮的父布局 -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/id_layout_chest_cal_clo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/chest_fragment_sum_clo"/>

                    <TextView
                        android:id="@+id/id_tv_chest_cal_clo"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="衣服:"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:id="@+id/id_layout_chest_cal_pants"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chest_fragment_sum_pant"/>

                    <TextView
                        android:id="@+id/id_tv_chest_cal_pants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="裤子:"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#eeeeee"/>

            <LinearLayout
                android:id="@+id/id_layout_chest_see"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chest_fragment_see_clo"/>

                <TextView
                    android:id="@+id/id_tv_chest_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="查看衣服"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 搭配布局 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eeeeee"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="这些衣服或许你会喜欢"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/id_img_clo1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/clo_text1"
                />
                <!--android:src="@drawable/clo1"-->

            <ImageView
                android:id="@+id/id_img_clo2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/clo_text2"
                />
                <!--android:src="@drawable/clo2"-->

            <ImageView
                android:id="@+id/id_img_clo3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/clo_text3"
                />
                <!--android:src="@drawable/kuzi2"-->
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>